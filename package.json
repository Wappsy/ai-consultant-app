{
  "name": "ai-consultant-app",
  "version": "1.0.0",
  "description": "AI-guided employee feedback system",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../web-client && npm install && cd ../mobile-client && npm install",
    "start:backend": "cd backend && npm run start",
    "start:web": "cd web-client && npm start",
    "start:mobile": "cd mobile-client && npm start",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:web\""
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}